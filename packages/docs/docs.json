{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Worlds Docs",
  "colors": {
    "primary": "#D97706",
    "light": "#F59E0B",
    "dark": "#78350F"
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude"]
  },
  "favicon": "/images/wazoo.svg",
  "seo": {
    "indexing": "all",
    "metatags": {
      "og:type": "website",
      "og:site_name": "Worlds Docs"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Developer Platform",
        "icon": "book-open",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "developer-platform/getting-started",
              "developer-platform/quickstart"
            ]
          },
          {
            "group": "Concepts & Architecture",
            "pages": [
              "developer-platform/concepts/overview",
              "developer-platform/concepts/malleable-knowledge",
              "developer-platform/concepts/architecture",
              "developer-platform/concepts/worlds",
              "developer-platform/concepts/connectors",
              "developer-platform/concepts/data-privacy",
              "developer-platform/concepts/visualization",
              "developer-platform/concepts/edge-story",
              "developer-platform/concepts/future-work"
            ]
          },
          {
            "group": "Infrastructure",
            "pages": [
              "developer-platform/infrastructure/server-hosting",
              "developer-platform/infrastructure/local-setup",
              "developer-platform/infrastructure/configuration",
              "developer-platform/infrastructure/whitepaper",
              "developer-platform/infrastructure/console-hosting",
              "developer-platform/infrastructure/cli-persistence"
            ]
          }
        ]
      },
      {
        "tab": "API Integrations",
        "icon": "plug",
        "groups": [
          {
            "group": "Native SDKs",
            "pages": [
              "api-integrations/sdk-overview",
              "api-integrations/sdk"
            ]
          },
          {
            "group": "Frameworks",
            "pages": [
              "api-integrations/frameworks/ai-sdk",
              "api-integrations/frameworks/vercel-ai",
              "api-integrations/frameworks/langchain",
              "api-integrations/frameworks/openai"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "icon": "code",
        "openapi": ["openapi.yaml"],
        "groups": [
          {
            "group": "API Basics",
            "pages": [
              "api-reference/basics/authentication",
              "api-reference/basics/search",
              "api-reference/basics/sparql"
            ]
          },
          {
            "group": "Endpoints",
            "expanded": false,
            "pages": [
              "GET /worlds",
              "POST /worlds",
              "GET /worlds/{world}",
              "PUT /worlds/{world}",
              "DELETE /worlds/{world}",
              "GET /worlds/{world}/search",
              "GET /worlds/{world}/sparql",
              "POST /worlds/{world}/sparql",
              "GET /worlds/{world}/logs",
              "GET /worlds/{world}/export",
              "POST /worlds/{world}/import"
            ]
          }
        ]
      },
      {
        "tab": "Cookbook",
        "icon": "hat-chef",
        "groups": [
          {
            "group": "Guides",
            "pages": [
              "cookbook/social-graphs",
              "cookbook/personal-search",
              "cookbook/cli-tasks",
              "cookbook/vibe-coding"
            ]
          }
        ]
      }
