{
  "workspace": [
    "./workspaces/ai-sdk",
    "./workspaces/api",
    "./workspaces/cli",
    "./workspaces/sdk"
  ],
  "tasks": {
    "test": "deno test -A",
    "check": "deno check workspaces/api/main.ts workspaces/sdk/mod.ts workspaces/cli/main.ts workspaces/ai-sdk/mod.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "precommit": "deno task fmt && deno task lint && deno task check && deno task test"
  },
  "imports": {
    "zod": "npm:zod@^4.3.6",
    "@std/assert": "jsr:@std/assert@^1.0.18",
    "@std/ulid": "jsr:@std/ulid@1",
    "@std/path": "jsr:@std/path@^1.1.4"
  },
  "exclude": ["./workspaces/console"],
  "publish": {
    "exclude": ["**/*.test.ts", "**/*_test.ts"]
  }
}
