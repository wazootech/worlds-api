{
  "openapi": "3.0.1",
  "info": {
    "version": "0.0.1",
    "title": "Worlds API",
    "description": "Worlds APIâ„¢ is a REST API that can be used to manage, query, update, and reason over SPARQL 1.1-compatible stores at the edge.",
    "contact": {
      "url": "https://github.com/FartLabs/worlds-api/issues"
    }
  },
  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "V1Store": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "required": [
          "id"
        ]
      }
    },
    "parameters": {}
  },
  "paths": {
    "/v1/stores/{store}": {
      "get": {
        "operationId": "getStore",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "schema": {
              "type": "string",
              "minLength": 1,
              "example": "my-graph-db"
            },
            "required": true,
            "name": "store",
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "Get a store",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/V1Store"
                }
              },
              "application/ld+json": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "application/n-quads": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "application/trig": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "text/turtle": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "application/n-triples": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "text/n3": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "application/rdf+xml": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "404": {
            "description": "Store not found"
          },
          "406": {
            "description": "Not Acceptable"
          }
        }
      },
      "put": {
        "operationId": "setStore",
        "description": "Overwrite the store's contents",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "schema": {
              "type": "string",
              "minLength": 1,
              "example": "my-graph-db"
            },
            "required": true,
            "name": "store",
            "in": "path"
          }
        ],
        "requestBody": {
          "description": "RDF Data",
          "content": {
            "application/n-quads": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "text/turtle": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "application/ld+json": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "application/trig": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Store updated successfully"
          },
          "400": {
            "description": "Invalid RDF data"
          },
          "412": {
            "description": "Precondition Failed"
          }
        }
      },
      "post": {
        "operationId": "addQuads",
        "description": "Add quads to the store",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "schema": {
              "type": "string",
              "minLength": 1,
              "example": "my-graph-db"
            },
            "required": true,
            "name": "store",
            "in": "path"
          }
        ],
        "requestBody": {
          "description": "RDF Data",
          "content": {
            "application/n-quads": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "text/turtle": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "application/ld+json": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "application/trig": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Store updated successfully"
          },
          "400": {
            "description": "Invalid RDF data"
          }
        }
      },
      "delete": {
        "operationId": "removeStore",
        "description": "Delete the store",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "schema": {
              "type": "string",
              "minLength": 1,
              "example": "my-graph-db"
            },
            "required": true,
            "name": "store",
            "in": "path"
          }
        ],
        "responses": {
          "204": {
            "description": "Store deleted"
          }
        }
      }
    },
    "/v1/stores/{store}/sparql": {
      "get": {
        "operationId": "sparqlQuery",
        "description": "Execute a SPARQL query (read-only)",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "schema": {
              "type": "string",
              "minLength": 1,
              "example": "my-graph-db"
            },
            "required": true,
            "name": "store",
            "in": "path"
          },
          {
            "schema": {
              "type": "string",
              "description": "A read-only SPARQL query (SELECT, ASK, CONSTRUCT, DESCRIBE). Use this to research the graph structure, find existing entities, or check properties. DO NOT use INSERT/DELETE here."
            },
            "required": true,
            "description": "A read-only SPARQL query (SELECT, ASK, CONSTRUCT, DESCRIBE). Use this to research the graph structure, find existing entities, or check properties. DO NOT use INSERT/DELETE here.",
            "name": "query",
            "in": "query"
          },
          {
            "schema": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ]
            },
            "required": false,
            "name": "default-graph-uri",
            "in": "query"
          },
          {
            "schema": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ]
            },
            "required": false,
            "name": "named-graph-uri",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Query results",
            "content": {
              "application/sparql-results+json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "head": {
                      "type": "object",
                      "properties": {
                        "vars": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "boolean": {
                      "type": "boolean"
                    },
                    "results": {
                      "type": "object",
                      "properties": {
                        "bindings": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "additionalProperties": {
                              "type": "object",
                              "properties": {
                                "type": {
                                  "type": "string"
                                },
                                "value": {
                                  "type": "string"
                                },
                                "xml:lang": {
                                  "type": "string"
                                },
                                "datatype": {
                                  "type": "string"
                                }
                              },
                              "required": [
                                "type",
                                "value"
                              ]
                            }
                          }
                        }
                      },
                      "required": [
                        "bindings"
                      ]
                    }
                  },
                  "required": [
                    "head"
                  ]
                }
              },
              "application/sparql-results+xml": {
                "schema": {
                  "type": "string"
                }
              },
              "text/csv": {
                "schema": {
                  "type": "string"
                }
              },
              "application/n-quads": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "text/turtle": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "post": {
        "operationId": "sparqlUpdate",
        "description": "Execute a SPARQL query or update",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "schema": {
              "type": "string",
              "minLength": 1,
              "example": "my-graph-db"
            },
            "required": true,
            "name": "store",
            "in": "path"
          }
        ],
        "requestBody": {
          "description": "SPARQL Query or Update",
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": {
                    "type": "string"
                  },
                  "update": {
                    "type": "string"
                  },
                  "default-graph-uri": {
                    "anyOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    ]
                  },
                  "named-graph-uri": {
                    "anyOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    ]
                  }
                }
              }
            },
            "application/sparql-query": {
              "schema": {
                "type": "string"
              }
            },
            "application/sparql-update": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Query results or Update success",
            "content": {
              "application/sparql-results+json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "head": {
                      "type": "object",
                      "properties": {
                        "vars": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "boolean": {
                      "type": "boolean"
                    },
                    "results": {
                      "type": "object",
                      "properties": {
                        "bindings": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "additionalProperties": {
                              "type": "object",
                              "properties": {
                                "type": {
                                  "type": "string"
                                },
                                "value": {
                                  "type": "string"
                                },
                                "xml:lang": {
                                  "type": "string"
                                },
                                "datatype": {
                                  "type": "string"
                                }
                              },
                              "required": [
                                "type",
                                "value"
                              ]
                            }
                          }
                        }
                      },
                      "required": [
                        "bindings"
                      ]
                    }
                  },
                  "required": [
                    "head"
                  ]
                }
              },
              "application/sparql-results+xml": {
                "schema": {
                  "type": "string"
                }
              },
              "text/csv": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "204": {
            "description": "Update successful (no content)"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  }
}
